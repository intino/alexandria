Action deploy

Action logServer
Action logProject
Action codeAnalysis

Application(name = "app", path = "/app") app
	Trigger(actions = deploy) runDeployOneTime as OneTime(startOnInit = false)
	Trigger(codeAnalysis) scheduleCodeAnalysis as Cron(mean = "everyDay", pattern ="0 0 11 * * ?")
	Trigger(logServer) scheduleLogServer as Cron(pattern = "0 0/2 * * * *", mean = "everyTwoMinutes")
	Trigger(logProject) scheduleLogProject as Cron(pattern = "0 * * * * *", mean = "everyMinute")

	Trigger(deploy) runJMXDeploy as JMX

	Trigger(empty) as ProcessWatcher(processName="", events = OnStart OnTerminate, check = 'return true')
	Trigger(empty) as DirectoryWatcher(directory="sample", events = OnCreate OnDelete, check = 'return true')

	Trigger(empty) as JMSQueueWatcher(queue = "")
	Trigger(empty) as JMSTopicWatcher(topic = "")
	Trigger(empty) as JMSRequest
