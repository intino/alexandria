dsl Konos

Activity testKonos
	Home(uses=testHome) homePage

Desktop testHome
	layout = testMenu
	title = "Ejemplo"
	subTitle = "Ejemplo de proyecto hecho con Konos"
	logo = "logo.png"
	favicon = "icon.png"

Layout testMenu
	mode = Menu
	Group(label = "ddd", mode = Expanded)
		Option(label="infrastructure")
			RenderCatalog(catalog=testInfrastructure)
		Option(label="análisis") > RenderPanel(panel=testAnalisis)

Panel(label = "Análisis") testAnalisis
	Views
		DisplayView("Charts", display="olapDisplay")

Catalog("Infraestructura", modelClass = "io.intino.test.konos.graph.Station") testInfrastructure
	Toolbar
		GroupingSelection("crear grupo", alexandriaIcon = "content-copy")
		TaskSelection("remove elements", alexandriaIcon = "remove-circle-outline")
			refresh = Catalog
		Download("download", alexandriaIcon = "file-download")
		DownloadSelection("download assets info", alexandriaIcon = "file-download")
		Export("export", alexandriaIcon = "archive")
		ExportSelection("export selection", alexandriaIcon = "archive")
	Events
		OnClickRecord > OpenDialog
	Views
		ListView(label = "List", mold = infrastructureMold, width = 90%)
		GridView(label = "Grid", mold = infrastructureMold, width = 90%)
		DisplayView("Charts", display="olapDisplay")
		MapView(label = "Map", mold = infrastructureMold)
			Center(latitude = 28.146773457066104, longitude = -15.418557420532238)
			Zoom(14, min=1, max=18)
	Arrangement
		Grouping("units")
		Grouping("status")
		Sorting(label="date")

Mold(modelClass = "io.intino.Station") infrastructureMold
    Block
        Block
            Location("coordinates")
        Block(expanded = true)
            Block
                Title("label")
                Description("description")
            Block(layout = Horizontal)
                Picture("chart")
                    defaultStyle = "margin-top:6px;"
                Snippet("sequencia")
                    layout = Flexible
                    defaultStyle = "height:155px;overflow:auto;margin-top:10px;margin-bottom:10px;"
            Block
                Snippet("")