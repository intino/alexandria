dsl Konos

Activity testKonos
	Home(uses=testHome) homePage

Display Drillwise

Desktop testHome
	layout = testMenu
	title = "Ejemplo"
	subTitle = "Ejemplo de proyecto hecho con Konos"
	logo = "logo.png"
	favicon = "icon.png"

Layout testMenu
	mode = Menu
	Group("ddd", Expanded) ddd
		Option(label="infrastructure") infrastructure> RenderCatalogs(catalogs=testInfrastructure)
		Option(label="análisis") analisis > RenderPanels(testAnalisis)

Panel(label = "Análisis") testAnalisis
	Views
		View(label = "olap") > RenderDisplay(display = "olapDisplay")

Catalog("Infraestructura", modelClass = "io.intino.test.konos.graph.Station") testInfrastructure
	Toolbar
		GroupingSelection("crear grupo", alexandriaIcon = "content-copy")
		TaskSelection("remove elements", alexandriaIcon = "remove-circle-outline")
		Download("download", alexandriaIcon = "file-download")
		DownloadSelection("download assets info", alexandriaIcon = "file-download")
		Export("export", alexandriaIcon = "archive")
		ExportSelection("export selection", alexandriaIcon = "archive")

	Events
		OnClickRecord
			OpenPanel(panel = testAnalisis) openDialog
				hasBreadcrumbs =true

	Views
		ListView("List", mold=testInfrastructureMold, width = 90%)
		GridView("Grid", mold=testInfrastructureMold, width = 90%)
		DisplayView("Charts", display="olapDisplay")
		MapView("mapa", mold = testInfrastructureMold)
			Center(latitude = 28.146773457066104, longitude = -15.418557420532238)
			Zoom(14, min=1, max=18)

	Arrangement
		Grouping(label="units") units
		Grouping(label="status") status
		Sorting(label="date") date


Mold(modelClass = "io.intino.test.konos.graph.Station") testInfrastructureMold
	Block a1
		Location("coordinates")coordinates
			hasCustomStyle =true
			defaultStyle = "laallala"
			height = 10
			editable = true
			suffix = "suffix"
			layout = Fixed
