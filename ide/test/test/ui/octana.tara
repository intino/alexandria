dsl Konos

Activity(title = "", favicon = "") octana
	Home(uses=octanaDesktop) home

Desktop(title = "Octana", subTitle = "Octana", logoPath = "logo.png", faviconPath = "favicon.png") octanaDesktop
	layout = octanaLayout

Layout(mode = Menu) octanaLayout
	Option("dashboard") dashboard
		RenderPanels(octanaDashboardPanel)
	Option("centros") centers > RenderCatalogs(octanaCenterCatalog)
	Option("personas") persons > RenderCatalogs(octanaPersonCatalog)
	Option("análisis") analysis > RenderPanels(octanaAnalysisPanel)

Panel octanaDashboardPanel
	Toolbar > OpenDialog("abrir", dialog=dialog1) abrir
	Views > View("overview") overview > RenderMold(octanaDashboardMold)

Mold(modelClass="Octana") octanaDashboardMold
	Block ocBlock
		hidden = HiddenEnabled
		Title sss
		EmbeddedDialog(dialog = dialog1) embeddedDialog

Dialog(url = "", label = "", description = "") dialog1

Catalog(modelClass = "io.intino.octana.graph.Center") octanaCenterCatalog
	Toolbar > OpenDialog("abrir", dialog=dialog1)
//	Events > OnClickRecord > OpenDialog(dialog1)
	Events > OnClickRecord > OpenCatalog(octanaPersonCatalog, hasItemToLoad=true)
	Views
		ListView("lista", mold = octanaCenterMold)

Mold(modelClass="io.intino.octana.graph.Center") octanaCenterMold

Catalog(modelClass = "io.intino.octana.graph.Person") octanaPersonCatalog
	Views
		ListView("lista", mold = octanaPersonMold)

Mold(modelClass="io.intino.octana.graph.Person") octanaPersonMold

Panel octanaAnalysisPanel
	Views
		View("análisis") analisis
			RenderDisplay(display = "olap")
			hidden = HiddenEnabled


Catalog(modelClass = "Octana") octanaPersonCatalog
	Views
		DisplayView(label = "", display = "") dv
