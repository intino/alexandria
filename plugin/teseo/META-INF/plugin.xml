<idea-plugin version="2">
    <id>org.siani.forrest</id>
    <name>Teseo</name>
    <version>1.1.0</version>
    <vendor email="teseo@siani.es" url="http://www.siani.es">Siani</vendor>

    <description><![CDATA[
      Teseo helps to create API rest of platforms created with Tara.
    ]]></description>

    <change-notes><![CDATA[
      1.1.0
        - Support of modules with no tara facet
        - Improved stability
      1.0.4
        - Updated client exporting.
        - Updated teseo dependencies.
      1.0.3
        - Fixed server creating.
        - Updated application.
      1.0.2
        - Added Client Exportation to Artifactory
      1.0.1
        - Added button in tools menu
        - Added error message in case of non read stash
    ]]>
    </change-notes>

    <idea-version since-build="141.0"/>
    <depends>siani.dev.tara</depends>

    <extensions defaultExtensionNs="com.intellij">
        <facetType implementation="org.siani.teseo.plugin.project.facet.TeseoFacetType"/>
        <fileTypeFactory implementation="org.siani.teseo.plugin.file.TeseoFileTypeFactory"/>
        <errorHandler implementation="org.siani.teseo.plugin.errorreporting.PluginErrorReportSubmitter"/>
    </extensions>

    <actions>
        <action id="NewTeseoFile" class="org.siani.teseo.plugin.actions.CreateTeseoFileAction">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>
        <action id="CreateTeseoAPI" class="org.siani.teseo.plugin.actions.CreateServerAction"
                text="Create Teseo Actions"
                description="Create Teseo Actions">
            <keyboard-shortcut keymap="$default" first-keystroke="control alt R"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        <action id="ExportClient" class="org.siani.teseo.plugin.actions.ExportAccessorAction"
                text="Export Teseo Accessor"
                description="Export Teseo Accessor to Artifactory">
            <keyboard-shortcut keymap="$default" first-keystroke="control alt F"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        <action id="GenerateApi" class="org.siani.teseo.plugin.actions.GenerateApiAction"
                text="Generate api for this model"
                description="Generate api for this model">
            <add-to-group group-id="GenerateGroup" anchor="first"/>
        </action>
    </actions>
    <application-components>
        <component>
            <implementation-class>org.siani.teseo.plugin.project.FileListener</implementation-class>
        </component>
    </application-components>
</idea-plugin>